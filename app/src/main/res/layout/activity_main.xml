<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Genre Headers -->
        <TextView
            android:id="@+id/scoreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score: 0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/genre1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="General"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FFBB86FC"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/genre2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Movie"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FF6200EE"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/genre3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="iACADEMY"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="#FF3700B3"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- Jeopardy Grid -->
        <GridLayout
            android:id="@+id/jeopardyGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:columnOrderPreserved="false">

            <Button
                android:id="@+id/column1_q1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column2_q1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column3_q1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <!-- Row 2 -->
            <Button
                android:id="@+id/column1_q2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column2_q2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column3_q2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <!-- Row 3 -->
            <Button
                android:id="@+id/column1_q3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column2_q3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

            <Button
                android:id="@+id/column3_q3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:text="100 pts"
                android:background="@android:drawable/btn_default"/>

        </GridLayout>
    </LinearLayout>
</ScrollView>
